<!-- Blog Section -->
@if (Model != null && Model.Any())
{
    <section class="pb_section bg-light" style="padding-top: 80px; padding-bottom: 80px; overflow: visible;">
        <div class="container" style="overflow: visible;">
            <div class="row justify-content-md-center text-center mb-5">
                <div class="col-lg-7">
                    <h2 class="mt-0 heading-border-top font-weight-normal">Son Blog Yazıları</h2>
                    <p>Hukuki konularda faydalı bilgiler ve güncel gelişmeler.</p>
                </div>
            </div>
            <div class="row" style="margin-top: 30px; padding-top: 20px; overflow: visible;">
                @foreach (var post in Model.Take(3))
                {
                    <div class="col-md-4 mb-5 mt-3" style="overflow: visible;">
                        <div class="card h-100 border-0 shadow-sm" style="overflow: visible; margin-top: 0; position: relative; min-height: 550px;">
                            @if (!string.IsNullOrEmpty(post.FeaturedImage))
                            {
                                <img src="@post.FeaturedImage" class="card-img-top" alt="@post.Title" style="height: 350px; object-fit: cover; border-radius: 8px 8px 0 0; margin-bottom: 0;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 350px; border-radius: 8px 8px 0 0; margin-bottom: 0;">
                                    <i class="fa fa-file text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                            <div class="card-body" style="padding: 1.5rem; margin-top: 65px;">
                                @if (post.Category != null)
                                {
                                    <span class="badge bg-primary mb-2">@post.Category.Name</span>
                                }
                                <h5 class="card-title">@post.Title</h5>
                                <p class="card-text text-muted">@post.Summary</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">
                                        <i class="ion-ios-calendar-outline mr-1"></i>@post.PublishedAt?.ToString("dd.MM.yyyy")
                                    </small>
                                    <a href="/blog/@post.Slug" class="btn btn-sm btn-outline-primary">Devamını Oku</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="/blog" class="btn pb_btn-pill btn-primary btn-shadow-blue">
                    Tüm Blog Yazıları
                </a>
            </div>
        </div>
    </section>
}

<!-- Contact Section -->
<section class="pb_section" data-section="contact" id="section-contact">
    <div class="container">
        <div class="row justify-content-md-center text-center mb-5">
            <div class="col-lg-7">
                <h2 class="mt-0 heading-border-top font-weight-normal">İletişim</h2>
                <p>Hukuki sorunlarınız için bizimle iletişime geçebilirsiniz.</p>
            </div>
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-6 mb-5">
                <form asp-controller="Contact" asp-action="Index" method="post" class="pb_form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control pb_height-50 reverse" name="FullName" placeholder="Adınız Soyadınız" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="email" class="form-control pb_height-50 reverse" name="Email" placeholder="Email Adresiniz" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="tel" class="form-control pb_height-50 reverse" name="Phone" placeholder="Telefon Numaranız">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control pb_height-50 reverse" name="Subject" placeholder="Konu">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea name="Message" cols="30" rows="7" class="form-control pb_height-100 reverse" placeholder="Mesajınız" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" class="btn pb_btn-pill btn-primary btn-shadow-blue" value="Gönder">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12 pb_font-18 pb_mb-30">
                        <h3>İletişim Bilgileri</h3>
                    </div>
                    <div class="col-md-12">
                        <p class="pb_font-14"><i class="ion-ios-location-outline mr-2"></i> Adres: [Adres Bilgisi]</p>
                    </div>
                    <div class="col-md-12">
                        <p class="pb_font-14"><i class="ion-ios-telephone-outline mr-2"></i> Telefon: [Telefon Numarası]</p>
                    </div>
                    <div class="col-md-12">
                        <p class="pb_font-14"><i class="ion-ios-email-outline mr-2"></i> Email: [Email Adresi]</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Harita -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="map-container" style="height: 400px; border-radius: 8px; overflow: hidden;">
                    <iframe
                        src="https://www.google.com/maps?q=40.721772200647045,29.94977634018687&hl=tr&z=15&output=embed"
                        width="100%"
                        height="400"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
