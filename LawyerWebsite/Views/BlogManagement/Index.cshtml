@model List<LawyerWebsite.Models.Entities.BlogPost>
@{
    ViewData["Title"] = "Blog Yazıları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-file-text me-2"></i>Blog Yazıları</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Yeni Yazı Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>Görüntülenme</th>
                            <th>Tarih</th>
                            <th style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@post.Title</strong>
                                    @if (!string.IsNullOrEmpty(post.FeaturedImage))
                                    {
                                        <i class="bi bi-image text-primary ms-2"></i>
                                    }
                                </td>
                                <td>
                                    @if (post.Category != null)
                                    {
                                        <span class="badge bg-secondary">@post.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (post.IsPublished)
                                    {
                                        <span class="badge bg-success">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Taslak</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-eye me-1"></i>@post.ViewCount
                                </td>
                                <td>
                                    <small class="text-muted">@post.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/blog/@post.Slug" target="_blank" class="btn btn-outline-info" title="Görüntüle">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@post.Id)" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-file-text text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">Henüz blog yazısı bulunmamaktadır.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>İlk Yazıyı Ekle
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Bu blog yazısını silmek istediğinizden emin misiniz?')) {
                const form = document.getElementById('deleteForm');
                form.action = '/admin/blog/delete/' + id;
                form.submit();
            }
        }
    </script>
}
